<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/"> 
<Script file="FlightTime.lua"/>
    
<Frame name="FlightTime" frameStrata="HIGH" parent="UIParent" hidden="true" enableMouse="false">
    <Size>
        <AbsDimension x="350" y="32"/>
    </Size>
    <Anchors>
        <Anchor point="CENTER">
            <Offset><AbsDimension x="0" y="-150"/></Offset>
        </Anchor>
    </Anchors>
    <Backdrop bgFile="\\Interface\\AddOns\\FlightTime\\PlainBackdrop.tga" tile="true">
        <EdgeSize>
            <AbsValue val="16"/>
        </EdgeSize>
        <TileSize>
            <AbsValue val="32"/>
        </TileSize>
        <BackgroundInsets>
            <AbsInset left="5" right="5" top="5" bottom="5"/>
        </BackgroundInsets>
        <Scripts>
            <OnLoad>
                self:SetBackdropColor(0,0,1,.5)
            </OnLoad>
        </Scripts>
    </Backdrop>
    <Scripts>
        <OnLoad>
            FlightTime_OnLoad(self)
            self:SetAlpha(0)
        </OnLoad>
        <OnEvent>
            FlightTime_OnEvent(event)
        </OnEvent>
        <OnUpdate>
            FlightTime_UpdateTime()
        </OnUpdate>
    </Scripts>
    <Layers> 
        <Layer level="DIALOG"> 
            <FontString name="$parent_Text" inherits="GameFontNormal">
            <Color r="1.0" g="1.0" b="1.0"/> 
                <Size>
                    <AbsDimension x="350" y="32"/>
                </Size>
                <Anchors>
                    <Anchor point="CENTER">
                        <Offset>
                            <AbsDimension x="0" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </FontString>
        </Layer> 
    </Layers> 
</Frame>
</Ui>